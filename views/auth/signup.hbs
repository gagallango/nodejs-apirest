<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Sign up</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control" id="field2">

            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Sign up</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Already have an account? <a href="/login">Login</a></p>
    </div>
</div>