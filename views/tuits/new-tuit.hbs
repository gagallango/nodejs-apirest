<div>
    <h3>New tuit</h3>
    <form action="/tuits/new" method="POST">
        <div class="form-group">
            <label for="title-input">Title</label>
            <input name="title" type="text" class="form-control" id="title-input">
        </div>
        <div class="form-group">
            <label for="content-input">Content</label>
            <input name="content" type="text" class="form-control" id="content-input">
        </div>
        <button type="submit" class="btn btn-light">Create new tuit</button>
        <a href="/" class="btn btn-light">Back</a>

    </form>
</div>